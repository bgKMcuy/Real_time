<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dasar"
    tools:context=".home.HomeFragment">

    <TextView
        android:id="@+id/header"
        android:layout_width="415dp"
        android:layout_height="370dp"
        android:background="@drawable/square"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/text_atas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/ipb_farm"
        android:textSize="20sp"
        android:textColor="@color/putih"
        android:fontFamily="@font/roboto_light"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/icon_atas"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@mipmap/ic_launcher_round"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/box_1"
        android:layout_width="370dp"
        android:layout_height="170dp"
        android:background="@drawable/round_2"
        android:backgroundTint="@color/biru_muda"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="75dp"/>

    <ImageButton
        android:id="@+id/icon_aktuator"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/water_tap"
        android:background="@drawable/round_button"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintHorizontal_bias="0.060"
        app:layout_constraintLeft_toLeftOf="@id/box_1"
        app:layout_constraintRight_toRightOf="@id/box_1"
        app:layout_constraintTop_toTopOf="@id/box_1" />

    <TextView
        android:id="@+id/text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/kondisi_aktuator"
        android:textColor="@color/putih"
        android:textSize="25sp"
        app:layout_constraintHorizontal_bias="0.861"
        app:layout_constraintLeft_toLeftOf="@id/box_1"
        app:layout_constraintRight_toRightOf="@id/box_1"
        app:layout_constraintTop_toTopOf="@id/box_1" />

    <TextView
        android:id="@+id/text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/tertutup"
        android:textColor="@color/putih"
        android:textSize="23sp"
        app:layout_constraintHorizontal_bias="0.736"
        app:layout_constraintLeft_toLeftOf="@id/box_1"
        app:layout_constraintRight_toRightOf="@id/box_1"
        app:layout_constraintTop_toBottomOf="@id/text_1" />

    <TextView
        android:id="@+id/text_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/monitoring_field"
        android:textSize="25sp"
        android:textColor="@color/putih"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/box_1" />

    <Button
        android:id="@+id/tombol_1"
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/putih"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="320dp" />

    <Button
        android:id="@+id/tombol_2"
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/putih"
        app:layout_constraintTop_toTopOf="@id/tombol_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="111dp" />

    <Button
        android:id="@+id/tombol_3"
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/putih"
        app:layout_constraintTop_toTopOf="@id/tombol_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="111dp" />

</androidx.constraintlayout.widget.ConstraintLayout>